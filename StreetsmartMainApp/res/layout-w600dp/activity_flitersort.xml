<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dip" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dip" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dip"
        android:background="@color/loginbtn" >

        <com.example.FontClass.RegularWhite
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:text="FILTER by"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="30dip"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/retailer_sort"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dip" >

        <com.example.FontClass.RegularGray
            android:id="@+id/retailernames"
            android:layout_width="350dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="8dip"
            android:text="retailer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="340dip"
            android:layout_marginTop="8dip"
            android:text="- Change Retailer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/brand_sort"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dip" >

        <com.example.FontClass.RegularGray
            android:id="@+id/brandnames"
            android:layout_width="350dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:text="brand"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="340dip"
            android:layout_marginTop="8dip"
            android:text="- Change Brand"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dip" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dip"
        android:background="@color/loginbtn" >

        <com.example.FontClass.RegularWhite
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="Add FILTER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="30dip" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dip" >

        <CheckBox
            android:id="@+id/fi_emi"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dip"
            android:layout_marginTop="8dip"
            android:button="@drawable/filtercheckbox"
            android:text="" />

        <CheckBox
            android:id="@+id/fi_exchange"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dip"
            android:layout_marginTop="108dip"
            android:button="@drawable/filtercheckbox"
            android:text="" />

        <CheckBox
            android:id="@+id/fi_cod"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dip"
            android:layout_marginTop="208dip"
            android:button="@drawable/filtercheckbox"
            android:checked="true"
            android:text="" />

        <CheckBox
            android:id="@+id/fi_creditcard"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="440dip"
            android:layout_marginTop="308dip"
            android:button="@drawable/filtercheckbox"
            android:text="" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:text="CREDIT CARD OFFER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="120dip"
            android:gravity="center"
            android:text="EMI OFFER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="220dip"
            android:gravity="center"
            android:text="EXCHANGE OFFER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <com.example.FontClass.RegularGray
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="320dip"
            android:gravity="center"
            android:text="CASH ON DELIVERY"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dip" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginTop="100dip"
            android:background="#828383" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginTop="200dip"
            android:background="#828383" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginTop="300dip"
            android:background="#828383" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginTop="400dip"
            android:background="#828383" />
    </RelativeLayout>

    <com.example.FontClass.MyButtonView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:background="@color/loginbtn"
        android:text="UPDATE FILTER"
        android:textSize="30dip" />

    <TextView
        android:id="@+id/sortid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="440dip"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="95dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ret_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="155dip"
        android:layout_marginTop="95dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/brandmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dip"
        android:layout_marginTop="50dip"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/retailermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dip"
        android:layout_marginTop="80dip"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <Button
        android:id="@+id/filterclose"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/closeicon"
        android:text="" />

</RelativeLayout>