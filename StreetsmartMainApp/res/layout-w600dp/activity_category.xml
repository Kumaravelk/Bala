<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f3"
    tools:context=".MainActivity" >

    <com.example.FontClass.Lightgray
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:text="Select Your Category"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/loginbtn"
        android:textSize="40sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="80dip"
        android:background="#c0c0c0" />

    <ListView
        android:id="@+id/bwscatelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dip"
        android:divider="#333333"
        android:dividerHeight="0.75dip"
        android:textColor="#c0c0c0" >
    </ListView>

    <RelativeLayout
        android:id="@+id/subcate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f0f1f3"
        android:visibility="invisible" >

        <com.example.FontClass.Lightgray
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:gravity="center_horizontal"
            android:text="Select Your SubCategory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginbtn"
            android:textSize="40sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_marginTop="80dip"
            android:background="#c0c0c0" />

        <com.example.FontClass.MyEditText
            android:id="@+id/subcatsearch"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginTop="80dip"
            android:background="@drawable/categoryedittext"
            android:gravity="center"
            android:hint="Search SubCategories"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30sp" />
	
        <ListView
            android:id="@+id/listSubcate"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/subcatsearch"
            android:layout_marginTop="10dip"
            android:divider="#c0c0c0"
            android:dividerHeight="0.75dip"
            android:textColor="@color/loginbtn" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>