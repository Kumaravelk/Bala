<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
   
    <!-- android:descendantFocusability="blocksDescendants" > -->

    <com.example.FontClass.Lightgray
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="2dip"
        android:gravity="center_horizontal"
        android:text="Select a Brand"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/loginbtn"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="80dip"
        android:background="#c0c0c0" />

    <com.example.FontClass.MyEditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginTop="85dip"
        android:background="@drawable/categoryedittext"
        android:gravity="center"
        android:singleLine="true"
        android:hint="Search Brands"
        android:textSize="30sp" />

    <ListView
        android1:id="@+id/brandlist"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/search"
        android1:layout_marginTop="10dip" >
    </ListView>

</RelativeLayout>