<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f1f3" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="220dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        
         <RelativeLayout
            android:layout_width="511dip"
            android:layout_height="208dip"
            android:layout_centerInParent="true" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/dealimage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/loading_deal" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dip" >

        <RelativeLayout
            android:layout_width="511dip"
            android:layout_height="100dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bigdeal_bg_bottom" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/retailerlogo"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/loadingretailer" />

            <com.example.FontClass.Regular
                android:id="@+id/bigdealoffer"
                android:layout_width="420dip"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="125dip"
                android:layout_marginTop="6dip"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="32sp" />

            <com.example.FontClass.Regular
                android:id="@+id/bigdealpromo"
                android:layout_width="420dip"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="125dip"
                android:layout_marginTop="50dip"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bigdealid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:visibility="invisible" />
        </RelativeLayout>

    </RelativeLayout>
   
</RelativeLayout>