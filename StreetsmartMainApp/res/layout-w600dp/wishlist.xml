<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/wishimage"
        android:layout_width="273dip"
        android:layout_height="111dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/loading_deal" />

    <com.example.FontClass.RegularGray
        android:id="@+id/wishname"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="160dip"
        android:text="Deal Name"
        android:textSize="20dip" />

    <com.example.FontClass.RegularGray
        android:id="@+id/wishlisted"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="340dip"
        android:layout_marginTop="50dip"
        android:text="WISHLISTED ON"
        android:textSize="20dip" />

    <com.example.FontClass.RegularGray
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="340dip"
        android:layout_marginTop="80dip"
        android:text="date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dip" />

    <com.example.FontClass.RegularGray
        android:id="@+id/wishdealid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="220dip"
        android:layout_marginTop="10dip"
        android:text="id"
        android:visibility="invisible" />
 
</RelativeLayout>
