<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f0f1f3" >

    <com.example.FontClass.Lightgray
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Select Your Category"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/loginbtn" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dip"
        android:background="@color/loginbtn" />

    <ListView
        android:id="@+id/bwscatelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dip"
       
        android:dividerHeight="0.5dip"
        android:divider="#333333"
        android:textColor="@color/loginbtn" >
    </ListView>

    <RelativeLayout
        android:id="@+id/subcate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f0f1f3"
        android:visibility="invisible" >

        <com.example.FontClass.Lightgray
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="2dip"
            android:textSize="20dip"
            android:gravity="center_horizontal"
            android:text="Select Your SubCategory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/loginbtn" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dip"
            android:background="@color/loginbtn" />
     
        <com.example.FontClass.MyEditText
            android:id="@+id/subcatsearch"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="40dip"
            android:hint="Search SubCategories"
            android:maxLines="1"
            android:gravity="center"
			android:lines="1"
			android:textSize="14sp"
			android:background="@drawable/categoryedittext"
			android:singleLine="true" />
        
         
          
        <ListView
            android:id="@+id/listSubcate"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/subcatsearch"
            android:layout_marginTop="10dip"
            android:divider="#333333"
            android:dividerHeight="0.5dip"
            android:textColor="@color/loginbtn" >

        </ListView>
    </RelativeLayout>

</RelativeLayout>