<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout
          android:id="@+id/malllayout"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:background="#f1f1f1"
          >

        <com.example.FontClass.Lightgray
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Select Your Mall"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dip"
            android:background="@color/loginbtn" />
        
        <com.example.FontClass.MyEditText
            android:id="@+id/mallsearch"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="40dip"
            android:hint="Search Mall"
            android:background="@drawable/categoryedittext"
            android:maxLines="1"
             android:gravity="center"
			android:lines="1"
			android:singleLine="true"/>

    
  

        <ListView
            android:id="@+id/City_MallListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dip"
            android:divider="@color/loginbtn"
            android:dividerHeight="0.5dip" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>