<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

        <com.example.FontClass.Lightgray
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:gravity="center_horizontal"
        android:text="Select Your City"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/loginbtn" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dip"
        android:background="@color/loginbtn" />
  <EditText
            android:id="@+id/citysearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/ArealistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/citysearch"
        android:layout_marginTop="5dip"
        android:divider="@color/loginbtn"
        android:dividerHeight="0.5dip"
        android:textColor="@color/loginbtn" >

    </ListView>


    <RelativeLayout
        android:id="@+id/subarea"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:visibility="invisible" >

        <com.example.FontClass.Lightgray
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Select Your Area"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dip"
            android:background="@color/loginbtn" />
        
        <EditText
            android:id="@+id/subareasearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip" >

        <requestFocus />
    </EditText>

        <ListView
            android:id="@+id/listSubarea"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dip"
            android:divider="@color/loginbtn"
            android:dividerHeight="0.5dip" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:visibility="invisible" >

        <com.example.FontClass.Lightgray
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Select Your Mall"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dip"
            android:background="@color/loginbtn" />
        
         <EditText
            android:id="@+id/mallsearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip" >

        <requestFocus />
    </EditText>
        
        <ListView
            android:id="@+id/submallList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dip"
            android:divider="@color/loginbtn"
            android:dividerHeight="0.5dip" >

        </ListView>
    </RelativeLayout>

</RelativeLayout>